<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>F1 Global Newswire - Home</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="icon" type="image/png" href="/favicon.png">
</head>
<body>
  <header>
    <h1>F1 Global Newswire</h1>
    <h4>May 5th, 2024</h4>
    <a class="submit-button" href="/race-results">View Race Results →</a>
  </header>

  <main>
    <section class="latest-news">
      <h2>Latest News</h2>
      <% if (posts.length > 0) { %>
        <div class="card-container">
          <% posts.forEach(post => { %>
            <div class="news-card">
              <% if (post.image) { %>
                <img src="<%= post.image %>" alt="<%= post.title %>" class="card-img" />
              <% } %>
              <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
              <p class="meta">By <%= post.author %> — <%= new Date(post.date).toLocaleDateString() %></p>
              <p><a href="/post/<%= post.slug %>">Read More →</a></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No posts yet. Be the first to submit one!</p>
      <% } %>
    </section>
    

    <section>
      <h2></h2>
      <a class="submit-button" href="/submit">Create New Article →</a>
    </section>
  </main>
</body>
</html>
